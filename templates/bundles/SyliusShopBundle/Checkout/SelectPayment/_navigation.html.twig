{% set enabled = order.payments|length %}

<div class="ui two column grid">
    <div class="column">
        <a href="{{ path('sylius_shop_checkout_address') }}" class="ui large icon labeled button"><i class="arrow left icon"></i> {{ 'sylius.ui.change_address'|trans }}</a>
    </div>
    <div class="right aligned column">
        <input type="submit" id="next-step" class="button button--primary" {% if not enabled %} disabled{% endif %} {{ sylius_test_html_attribute('next-step') }} value="{{ 'sylius.ui.next'|trans }}"/>
    </div>
</div>
